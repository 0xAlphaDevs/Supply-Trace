datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transactions {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  attestation   Json
  attestationId String   @unique
  from          String
  to            String
  archived      Boolean
  amount        Float
  timestamp     DateTime
}

model Products {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  price   Float
  taxRate Float
  vendor  String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  wallet    String
  category  String
  timestamp DateTime
}
